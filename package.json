{
  "name": "nestjs-typegoose",
  "version": "7.0.0",
  "description": "A nestjs module wrapper for typegoose",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=8.10.0"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "lint": "tslint --project tsconfig.json",
    "test": "jest",
    "test:ci": "jest --forceExit",
    "test:cov": "jest --coverage --forceExit",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:watch": "jest --watch",
    "coverage": "yarn run test:cov && cat ./coverage/lcov.info | coveralls",
    "prepare": "npm run build"
  },
  "author": "Kyle Pfromer",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kpfromer/nestjs-typegoose"
  },
  "peerDependencies": {
    "@nestjs/common": "^6.3.1",
    "@nestjs/core": "^6.3.1",
    "@typegoose/typegoose": "^6.0.0",
    "mongoose": "^5.5.13"
  },
  "dependencies": {
    "is-class": "^0.0.9",
    "mongodb-memory-server": "^6.0.1",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@nestjs/common": "^6.7.2",
    "@nestjs/core": "^6.7.2",
    "@nestjs/platform-express": "^6.7.2",
    "@nestjs/testing": "^6.7.2",
    "@typegoose/typegoose": "^6.0.0",
    "@types/jest": "^24.0.18",
    "@types/mongoose": "^5.5.18",
    "@types/supertest": "^2.0.8",
    "coveralls": "^3.0.6",
    "gulp": "^4.0.2",
    "gulp-typescript": "^5.0.1",
    "jest": "^24.9.0",
    "mongoose": "^5.7.1",
    "rxjs": "^6.5.3",
    "supertest": "latest",
    "ts-jest": "^24.1.0",
    "tslint": "^5.20.0",
    "typescript": "3.7.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "resetMocks": true,
    "testEnvironment": "node"
  }
}
