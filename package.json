{
  "name": "nestjs-typegoose",
  "version": "5.0.1",
  "description": "A nestjs module wrapper for typegoose",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "typings": "dist/index.d.ts",
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.json",
    "test": "jest",
    "test:ci": "jest --forceExit",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "coverage": "jest --coverage && cat ./coverage/lcov.info | coveralls"
  },
  "author": "Kyle Pfromer",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kpfromer/nestjs-typegoose"
  },
  "peerDependencies": {
    "mongoose": "~5.1.1",
    "@nestjs/common": "~5.0.0",
    "@nestjs/core": "~5.0.0",
    "typegoose": "~5.2.1"
  },
  "dependencies": {
    "reflect-metadata": "^0.1.12",
    "is-class": "^0.0.5"
  },
  "devDependencies": {
    "mongoose": "~5.1.1",
    "@nestjs/common": "~5.0.0",
    "@nestjs/core": "~5.0.0",
    "typegoose": "~5.2.1",
    "@nestjs/testing": "^5.0.0",
    "@types/jest": "^21.1.2",
    "@types/mongoose": "^5.0.10",
    "@types/supertest": "^2.0.4",
    "body-parser": "latest",
    "coveralls": "^3.0.0",
    "express": "latest",
    "jest": "^22.4.3",
    "mockgoose": "latest",
    "rimraf": "2.6.2",
    "rxjs": "^6.1.0",
    "supertest": "latest",
    "ts-jest": "^22.4.4",
    "tslint": "5.9.1",
    "typescript": "2.8.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "resetMocks": true,
    "testEnvironment": "node"
  }
}
